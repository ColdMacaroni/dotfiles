# Get colour output
alias ls="ls --color=auto"
alias grep="grep --color=auto"

# Program shortcuts
alias cz="chezmoi "
alias py="python "

# Editor shortcuts - these go into the main file
alias kconf="chezmoi edit ~/.config/kitty/kitty.conf && chezmoi apply "
alias aconf="EDITOR=lvim chezmoi edit ~/.config/awesome/rc.lua && chezmoi apply && awesome -k"  # Check syntax is okay
alias zconf="chezmoi edit ~/.zshrc && chezmoi apply "
alias alconf="chezmoi edit ~/.aliases && chezmoi apply "
alias nconf="chezmoi edit ~/.config/nvim/init.vim && chezmoi apply "

# Editor shortcuts - these go into the folder
alias kdconf="env EDITOR=lvim chezmoi edit ~/.config/kitty/ && chezmoi apply"
alias adconf="env EDITOR=lvim chezmoi edit ~/.config/awesome/ && chezmoi apply"
alias ndconf="env EDITOR=lvim chezmoi edit ~/.config/nvim/ && chezmoi apply "

# Chezmoi shortcuts
alias cza="chezmoi git -- add "
alias czc="chezmoi git -- commit -v "
alias czp="chezmoi git -- push "
alias czs="chezmoi git -- status "
alias czd="chezmoi git -- diff "

# Git shortcuts
alias ga="git add "
alias gc="git commit -v "
alias gp="git push "
alias gs="git status "
alias gd="git diff "
